{% extends 'base/base.html.twig' %}

{% block title %}{{ 'Login' | trans }}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {#
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    #}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'Login' | trans }}</h1>

    <div class="form-group">
        <label for="inputEmail">{{ 'Email' | trans }}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>

    <div class="form-group">
        <label for="inputPassword">{{ 'Password' | trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" name="_remember_me" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">{{ 'Remember me' | trans }}</label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        {{ 'Sign in' | trans }}
    </button>
</form>
{% endblock %}
