{% extends 'base/base.html.twig' %}

{% block body %}
    {% include 'base/common-elements/details_title.html.twig' with {
        'title': 'Lista de tareas',
        'path': path('app_tarea_new'),
        'button_text': 'Nueva tarea'
    } %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarea in tareas %}
            <tr>
                <td>{{ tarea.id }}</td>
                <td>{{ tarea.estado }}</td>
                <td>{{ tarea.descripcion }}</td>
                <td>
                    <a href="{{ path('app_tarea_show', {'id': tarea.id}) }}">show</a>
                    <a href="{{ path('app_tarea_edit', {'id': tarea.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
