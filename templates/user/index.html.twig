{% extends 'base/base.html.twig' %}

{% block body %}
    {% include 'base/common-elements/details_title.html.twig' with {
        'title': 'Listado de usuarios',
        'path': path('app_user_new'),
        'button_text': 'Nuevo usuario'
    } %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Phone</th>
                <th>Locale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.locale }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-secondary mr-2">{{ "Show" | trans }}</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary mr-2">{{ "Edit" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "no_records_found" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
