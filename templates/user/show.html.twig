{% extends 'base/base.html.twig' %}

{% block body %}
    {% include 'base/common-elements/details_title.html.twig' with {
        'title': 'Detalle usuario: ' ~ user.email
    } %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ user.locale }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex flex-row align-items-center mb-3">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary mr-2">{{ 'Back to the list' | trans }}</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary mr-2">{{ 'Edit' | trans }}</a>

        {{ include('user/_delete_form.html.twig' ) }}
    </div>

{% endblock %}
